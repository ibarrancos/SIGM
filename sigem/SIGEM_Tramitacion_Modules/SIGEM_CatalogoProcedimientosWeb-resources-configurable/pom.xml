<?xml version="1.0" encoding="UTF-8" standalone="no"?><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
		
	<parent>
		<groupId>es.ieci.tecdoc.sigem</groupId>
		<artifactId>SIGEM_Tramitacion_Modules</artifactId>
		<version>3.0.1-M3</version>
	</parent>
	
	<artifactId>SIGEM_CatalogoProcedimientosWeb-resources-configurable</artifactId>
	<packaging>pom</packaging>
	
	<description>
		Modulo de Recursos de Configuracion del Catalogo de Procedimientos de SIGEM
	</description>
	
	<properties>
		<configurable.app.name>SIGEM_CatalogoProcedimientosWeb</configurable.app.name>
	</properties>
	
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>${assembly.plugin.version}</version>
				<configuration>
					<filters>
						<filter>${filter.generic.system}</filter>
					</filters>				
					<descriptors>						
						<descriptor>${basedir}/src/main/assembly/dep-resources-configurable.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>assembly-resources-configurable</id>
						<goals>
							<goal>single</goal>
						</goals>
						<phase>package</phase>
					</execution>
				</executions>
			</plugin>			
		</plugins>
	</build>	
	
	<profiles>
		<!-- Perfiles de construccion en funcion del S.O. -->
		<profile>
			<id>unix</id>
			<activation>
				<property>
					<name>unix</name>
				</property>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<filter.generic.system>${project.basedir}/../../SIGEM_Config/src/main/filters/system/unix.properties</filter.generic.system>
			</properties>
		</profile>
		<profile>
			<id>win</id>
			<activation>
				<property>
					<name>win</name>
				</property>
			</activation>
			<properties>
				<filter.generic.system>${project.basedir}/../../SIGEM_Config/src/main/filters/system/windows.properties</filter.generic.system>
			</properties>
		</profile>
	</profiles>	
		
</project>
