			<id>tomcat</id>
			<activation>
				<property>
					<name>tomcat</name>
				</property>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<filter.generic.server>${project.basedir}/../SIGEM_Config/src/main/filters/server/tomcat.properties</filter.generic.server>
			</properties>
		</profile>
		<profile>
			<id>jboss</id>
			<activation>
